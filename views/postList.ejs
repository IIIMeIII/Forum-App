<!doctype html>

<html>
  <head>
    <title> Welcome to the <%=forumName%> </title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>List of posts on the <%=forumName%></h1>
    <ul> 
        <!-- loops through the total number of available topics and displays them as a list -->
        <% for(let i = 0; i < postList.length; i++) { %>
            <% post = postList[i] %>
            <li>
                <h2><%= post.title %> from topic: <a id="postlistlink" href=/posts/<%= post.name %>><%= post.name %></a></h2>
                <p> <%= post.content %> </p>
                
                <p>Posted by:
                    <%= post.username %>
                </p>

                <p>Date posted:
                    <%= post.date %>
                </p>
            </li>
        <% } %>
    </ul>
  </body>
</html>